{
	"name": "Segment Event Tracker",
	"manifest_version": 3,
	"version": "3.0",
	"description": "See when Segment and Dreamdata events are being tracked.",
	"permissions": [
		"declarativeNetRequest",
		"declarativeNetRequestWithHostAccess",
		"declarativeNetRequestFeedback",
		"storage",
		"activeTab",
    "tabs",
    "webRequest",
    "webNavigation",
    "management",
    "scripting",
		"contextMenus",
		"clipboardWrite"
	],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_icon": {
			"16": "logo16.png",
			"48": "logo48.png",
			"128": "logo.png"
		},
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "logo16.png",
		"48": "logo48.png",
		"128": "logo.png"
	},
	"background": {
		"service_worker": "background-wrapper.js"
	},
	"devtools_page": "devtools_index.html"
}
